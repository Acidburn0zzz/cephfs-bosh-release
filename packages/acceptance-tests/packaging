#!/usr/bin/env bash

set -eux

mkdir -p ${BOSH_INSTALL_TARGET}/src
cp -a . ${BOSH_INSTALL_TARGET}/src
export GOPATH=$BOSH_INSTALL_TARGET
export REPO=$GOPATH/src/github.com/cloudfoundry-incubator/cephdriver

export GOROOT=$(readlink -nf /var/vcap/packages/golang)
export PATH=$GOROOT/bin:$GOPATH/bin:$PATH

go get github.com/onsi/ginkgo/ginkgo
go get github.com/onsi/gomega
acceptance_tests_src=${BOSH_INSTALL_TARGET}/src/github.com/cloudfoundry-incubator/cephdriver/acceptance

#ginkgo build ${acceptance_tests_src}/*
